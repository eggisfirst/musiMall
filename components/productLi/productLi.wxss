/* components/productLi/productLi.wxss */
.productLi-container {
  padding: 40rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  display: flex;
  width: 750rpx;
  height: 240rpx;
  overflow: hidden;

}

.product-cover {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  /* border: 1px solid #fff; */
  position: relative;
}
.image-mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  overflow: hidden;
  /* z-index: -1; */

}
.text-box {
  width: 100rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  /* border: 10rpx solid rgba(255,255,255, .8); */
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;

}
.text {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 5rpx solid #eee;
  color: #eee;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  box-sizing: border-box;
  transform: scale(0.8);
  overflow: hidden;
  /* -webkit-transform: rotate(-25deg); */
}
.text-box {
  -webkit-transform: rotate(-15deg);
  font-size: 28rpx;
}

.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}
.product-content {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 500rpx;
}

.product-content .product-name{
  color: #1a1a1a;
  font-size: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.product-content .product-price{
  color: #909090;
  font-size: 24rpx;
  text-decoration: line-through;
  line-height: 48rpx;
}

.product-slider {
  margin-bottom: 28rpx;
  width: 490rpx;
  overflow: hidden;
}
.product-slider .slider{
  width: 490rpx;
  height: 14rpx;
  background: #ccc;
  border-radius: 7rpx;
  position: relative;
}
.slider-after{
  /* display: block;
  content: ''; */
  /* width: 60rpx; */
  height: 14rpx;
  background: #ff3701;
  border-radius: 7rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.product-slider .slider-progress {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #909090;
  line-height: 40rpx;
}

.upcomingRob {
  font-size: 24rpx;
  color: #ff0101;
  line-height: 48rpx;
  margin-bottom: 28rpx;
}

.product-count {
  display: flex;
  justify-content: space-between;
  color: #ff3701;
  font-size: 28rpx;
  overflow: hidden;
}

.endDay {
  color: #999;
  font-size: 28rpx;
  line-height: 30rpx;
}

.count {
  width:180rpx;
  height:40rpx;
  overflow: hidden;
  text-align: right;
  /* border-radius:10rpx; */
}
.count text {
  font-size: 28rpx;
  color: #ff0101;
}
.price {
  width: 50%;
  height: 40rpx;
  overflow: hidden;
}
