/* components/productLi/productLi.wxss */
.productLi-container {
  padding: 40rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  display: flex;
}

.product-cover {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #fff;
  border-radius: 12rpx;
}

.product-content {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 490rpx;
}

.product-content .product-name{
  color: #1a1a1a;
  font-size: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.product-content .product-price{
  color: #909090;
  font-size: 24rpx;
  text-decoration: line-through;
  line-height: 48rpx;
}

.product-slider {
  margin-bottom: 28rpx;
  width: 490rpx;
}
.product-slider .slider{
  width: 490rpx;
  height: 14rpx;
  background: #ccc;
  border-radius: 7rpx;
  position: relative;
}
.slider-after{
  /* display: block;
  content: ''; */
  /* width: 60rpx; */
  height: 14rpx;
  background: #ff3701;
  border-radius: 7rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.product-slider .slider-progress {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #909090;
  line-height: 40rpx;
}

.upcomingRob {
  font-size: 24rpx;
  color: #ff0101;
  line-height: 48rpx;
  margin-bottom: 28rpx;
}

.product-count {
  display: flex;
  justify-content: space-between;
  color: #ff3701;
  font-size: 28rpx;
}

.endDay {
  color: #999;
  font-size: 28rpx;
  line-height: 30rpx;
}


