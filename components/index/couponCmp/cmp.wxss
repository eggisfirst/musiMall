/* components/index/couponCmp/cmp.wxss */
.container {
  margin-top: 100rpx;
  border: none;
}
.wrapper {
  margin-bottom: 20rpx;
}
.coupon {
  width:710rpx;
  height:200rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  margin-left: 20rpx;
  display: flex;
  box-sizing: border-box;
}

.left {
  width:200rpx;
  height:200rpx;
  border-radius:12rpx 0px 0px 12rpx;
  /* border: 1px solid red; */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
}
.left_img {
  width: 200rpx;
}
.text {
  font-size: 20rpx;
  color: #909090;
}
.center {
  margin-left: 20rpx;
  margin-top: 30rpx;
  margin-right: 20rpx;
  width: 470rpx;
  overflow: hidden;

}

.title {
  display: flex;
  align-items: center;
}
.status {
  width:84rpx;
  height:32rpx;
  background:linear-gradient(-45deg,rgba(255,92,48,1),rgba(255,131,49,1));
  border:1rpx solid rgba(255,93,48,1);
  border-radius:6rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}
.statused{
  width:84rpx;
  height:32rpx;
  background:linear-gradient(-45deg,rgba(137,137,137,1),rgba(175,175,175,1));
  border:1rpx solid rgba(108,108,108,1);
  border-radius:6rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}


.num {
  font-size: 32rpx;
  color: #1a1a1a;
  margin-left: 6rpx;
}

.time {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.line {
  color: #ccc;
  width: 100%;
  white-space:nowrap;
  font-size: 24rpx;
  /* height: 10rpx; */
  overflow-x: hidden;
  overflow-y: hidden;
  box-sizing: border-box;
}
.rules {
  color: #1a1a1a;
  font-size: 24rpx;
}
.rule_img {
  width: 14rpx;
  transform: rotate(90deg);
  margin-left: 10rpx;
}
.rule_img1 {
  width: 14rpx;
  transform: rotate(-90deg);
  margin-left: 10rpx;
}

.rules_text {
  width: 710rpx;
  margin-left: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  color: #666;
  font-size: 28rpx;
  padding: 26rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.empty{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.nocoupon {
  width: 82rpx;
}

.empty_text {
  color: #999;
  font-size: 29rpx;
}

.noMore {
  width: 100%;
  text-align: center;
  color: #ccc;
  font-size: 24rpx;
}