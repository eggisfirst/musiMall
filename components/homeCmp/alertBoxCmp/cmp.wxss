/* components/homeCmp/alertBoxCmp/cmp.wxss */
.wrapper {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.79);
  z-index: 99
}

.box {
  width: 517rpx;
  height: 662rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  position: relative;
  background: url("https://mobiletest.derucci.net/web/musiMall/images/basketball/succBox.png") no-repeat center;
  background-size: 100% 100%;
}

.image {
  width: 517rpx;
  height: 662rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1
}

.title {
  color: #fff;
  font-size: 54rpx;
  font-weight: bold;
  margin-top: 158rpx;
}

.content {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}
.content_text {
  color: #8f3cde;
  font-size: 38rpx;
  font-weight: bold;
}

.score_tips {
  color: #f73c17;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  margin-bottom: 35rpx;
  width: 80%;
  box-sizing: border-box;
}
.score {
  width: 18rpx;
  height: 24rpx;
  margin-right: 11rpx;
}

.btn {
  background:linear-gradient(-15deg,rgba(255,42,0,1) 0%,rgba(254,43,0,1) 100%);
  width: 381rpx;
  height: 75rpx;
  border-radius: 38rpx;
  color: #fff;
  font-size: 36rpx;
  line-height: 75rpx;
}

.bottom_btn {
  width: 517rpx;
  height: 58rpx;
  margin: 0 auto;
  margin-top: 36rpx;
  display: flex;
  justify-content: space-between;
  justify-items: center;
}

.share {
  background:linear-gradient(-15deg,rgba(142,59,237,1) 0%,rgba(156,82,239,1) 100%);
  width: 222rpx;
  line-height: 58rpx;
  border-radius: 29rpx;
  color: #fff;
  font-size: 28rpx;
  display: inline-block;
}

.button {
  background:linear-gradient(-15deg,rgba(142,59,237,1) 0%,rgba(156,82,239,1) 100%);
  width: 222rpx;
  line-height: 58rpx;
  border-radius: 29rpx;
  color: #fff;
  font-size: 28rpx;
  display: inline-block;
  margin-right: 25rpx
}

.close {
  width:60rpx;
  height: 60rpx;
  margin: 0 auto;
  margin-top: 48rpx; 
}