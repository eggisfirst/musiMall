/* components/homeCmp/activeCmp/activeCmp.wxss */


.activeCmp-container {
  width: 750rpx;
  margin-top: 40rpx
}

.banner {
  width: 344rpx;
  box-sizing: border-box;
  overflow: hidden;
  margin: 0 auto;
  /* position: relative; */
  height: 51rpx;
  background: url("https://mobiletest.derucci.net/web/musiMall/images/home/banner.png") no-repeat center;
  background-size: 100% 100%;
  display: flex;
  align-items: center

}
.banner-image {
  width: 344rpx;
  height: 51rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1
}
.text {
  display: inline-block;
  color: #fff;
  position: relative;
  text-align: center;
  font-size: 25rpx;
  font-weight: bold;
  width: 344rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.content {
  margin: 0 auto;
  width: 672rpx;
  box-sizing: border-box;
  overflow: hidden;
  margin-top: 20rpx;
  position: relative;
  margin-bottom: 20rpx;
   height: 299rpx;
}
.border {
  width: 672rpx;
  height: 292rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99
}
.content-image {
  z-index: 90;
  width: 622rpx;
  height: 242rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 25rpx;
  left: 25rpx
}

.button {
  line-height: 40rpx;
  position: absolute;
  bottom: 70rpx;
  right:60rpx;
  z-index: 100;
  background: #D91B06;
  color: #fff;
  font-size: 26rpx;
  padding: 4rpx 24rpx;
  border-radius: 5rpx;
}