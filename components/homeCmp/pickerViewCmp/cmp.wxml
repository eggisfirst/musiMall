<view class='index'>
  <view class='pickerView'>
     <view class='btnbox'>
        <view class='btn' catchtap='handleCancle'>取消</view>
        <view class='btn' catchtap='handleComfirm'>确定</view>
      </view>
        <view class='picker'>
          <picker-view 
            indicator-class="picker-box"
            style="width: 100%; height: 200px;"
            bindchange="drugChange"
            bindpickstart="pickerStart"
            bindpickend="pickerEnd"
            value="{{value}}"
           >
            <picker-view-column>
              <view wx:for="{{sex}}" 
                    wx:key="{{item}}" 
                    style="line-height: 100rpx;text-align:center">
                    {{item}}</view>
            </picker-view-column>
          </picker-view>
      </view>
  </view>
</view>
