/* components/tipsBox/tipsBox.wxss */
.tips-box {
  background-color: #fff;
  width: 560rpx;
  height: 290rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.tips-text {
  font-size: 36rpx;
  color: #000;
  height: 190rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn {
  border-top: 1px solid #d2d3d5;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  text-align: center;
  width: 100%;
  display: flex;
}
.cancle-btn {
  display: inline-block;
  width: 50%;
  color: #363636;
  border-right: 1px solid #d2d3d5;
}
.tips-btn {
  display: inline-block;
  width: 50%;
  color: #00c200;
}