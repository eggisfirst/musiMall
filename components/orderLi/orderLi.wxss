/* components/orderLi/orderLi.wxss */
.orderLi-container {
  background: #fff;
  width: 750rpx;
  min-height: 340rpx;
  box-shadow:0px 1rpx 2rpx 0px rgba(0, 0, 0, 0.2);
  margin-bottom: 20rpx;
}
.product-container {
  display: flex;
  /* align-items: center; */
  height: 260rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.orderLi-cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
}
.orderLi-content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  line-height: 48rpx;
  width: 480rpx;
}
.orderLi-name {
  display: flex;
  flex-direction: column;
  height: 204rpx;
}
.name {
  color: #1a1a1a;
  font-size: 30rpx;
  font-weight: 500;
}
.orderLi-price {
  color: #909090;
  font-size: 24rpx;
  text-decoration: line-through;
}
.orderLi-number {
  display: flex;
  justify-content: space-between;
  line-height: 30rpx;
  font-size: 28rpx;

}
.now-price {
  color: #ff3701;
}
.number {
  color: #999;
  font-weight: 500;
}
.total-price {
  width: 750rpx;
  text-align: right;
  border-top: 1rpx solid #e1e1e1;
  line-height: 80rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-weight: 500;
}
.total-text {
  color: #999;
  font-size: 30rpx;
}
.total-price {
  color: #ff0303;
  font-size: 30rpx
}




