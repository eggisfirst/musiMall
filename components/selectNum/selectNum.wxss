/* components/selectNum/selectNum.wxss */
.selectNum-container {
  width: 750rpx;
  height: 530rpx;
  border-radius: 40rpx 40rpx 0 0;
  background: #fff;
}
.closeBtn {
  width: 750rpx;
  height: 74rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 33rpx;
  box-sizing: border-box;
}
.image-close{
  width: 32rpx;
  height: 32rpx;
}

.selectNum-content {
  width: 750rpx;
  height: 456rpx;
  padding: 0 33rpx;
  box-sizing: border-box;
}
.content {
  display: flex;
}
.content-cover {
  width: 230rpx;
  height: 230rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
}
.image-cover{
  width: 230rpx;
  height: 230rpx;
}

.content-product {
  margin-left: 20rpx;
  width: 434rpx;
  height: 230rpx;
  overflow: hidden;
}

.product-name {
  color: #363636;
  font-size: 36rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.product-descript {
  /* border: 1px solid red; */
  margin-top: 5rpx;

}
.product-descript .text {
  background: #efeff4;
  border-radius: 8rpx;
  color: #909090;
  font-size: 24rpx;
  font-weight: 500;
  padding: 15rpx;
  max-width: 434rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  display: inline-block;
  box-sizing: border-box;
}
.product-number {
  color: #909090;
  font-size: 24rpx;
  line-height: 17rpx;
  padding: 10rpx 0;
}

.select-number {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}
.now-price {
  color: #e93d3d;
  font-size: 36rpx;
}
.select-box {
  display: flex;
  border: 1px solid #d6d7dc;
  border-radius: 4rpx;
}
.cut,.number,.add {
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
}
.cut {
  background: #efeff4;
  color: #ccc;
  font-size: 20rpx;
}
.number {
  border: 1rpx solid #d6d7dc;
  border-top: none;
  border-bottom: none;
  font-size: 30rpx;
  color: #363636;
}
.add {
  color: #ccc;
  font-size: 36rpx;
}

.comfirmBtn {
  width: 100%;
  height: 98rpx;
  background:linear-gradient(90deg,rgba(255,157,70,1),rgba(255,55,1,1));
  border-radius:12rpx;
  margin-top: 62rpx;
  color: #fff;
  font-weight: 500;
  font-size: 36rpx;
  text-align: center;
  line-height: 98rpx;
  letter-spacing: 2rpx;
}





