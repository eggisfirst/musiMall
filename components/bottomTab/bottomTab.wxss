/* components/bottomTab/bottomTab.wxss */
.tab-box {
  width: 750rpx;
  height: 164rpx;
  display: flex;
}

.tab-left {
  width: 50%;
  height: 100%;
  background: #1a1a1a;
  color: #999;
  font-size: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.toActivity,.tab-rules {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.toActivity image,.tab-rules image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 5rpx;
}

.tab-right {
  width: 50%;
  height: 100%;
  background: #ff3701;
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
}

.btn-box {
  display: flex;
  align-items: center;
  margin-top: -66rpx;
}
.btn-box image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 5rpx;
}