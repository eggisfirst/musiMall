/* components/lotteryCmp/tipsBox/cmp.wxss */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  width: 100%;
  height: 100vh;
}


.banner {
  position: absolute;
  left: 50%;
  top: 300rpx;
  margin-top: -68rpx;
  margin-left: -68rpx;
}
.banner_image {
  width: 136rpx;
}

.container {
  width: 654rpx;
  height: 469rpx;
  background: #fff;
  border-radius: 48rpx;
  box-shadow:0px 16rpx 24rpx 0px rgba(24,31,50,0.2);
  margin: 0 auto;
  margin-top: 300rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 21rpx;
  margin-top: 80rpx;
  box-sizing: border-box;
  height: 249rpx;
}
.title {
  color: #1C2236;
  font-size: 36rpx;
}
.text {
  color:#1C2236;
  font-size: 48rpx;
  font-weight: 500; 
}
.remark {
  color: #1C2236;
  font-size: 30rpx;
}

.btn {
  width:280rpx;
  height:88rpx;
  background:linear-gradient(270deg,rgba(238,196,104,1),rgba(232,138,75,1));
  border-radius:44rpx;
  line-height:88rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  margin: 0 auto;
}