/* components/lotteryCmp/lotteryBox/cmp.wxss */

.wrapper {
  width:633rpx;
  height:583rpx;
  background:linear-gradient(0deg,rgba(44,58,117,1) 0%,rgba(112,131,216,1) 100%);
  border-radius:15rpx;
  box-sizing: border-box;
}
.border {
  width:629rpx;
  height:578rpx;
  background:rgba(12,21,55,1);
  border-radius:15rpx;
  margin: 2rpx;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  position: relative;
}



.box {
  width:195rpx;
  height:175rpx;
  background:url("https://derucci-app.oss-cn-hangzhou.aliyuncs.com/musiMall/images/lottery/btn.png") no-repeat center;
  background-size: 100% 100%;
  color: #e9edff;
  font-size: 19rpx;
  text-align: center;
  padding-left: 23rpx;
  padding-right: 23rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
  margin-top: 4rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.optionBtn {
  width: 155rpx;
  height: 80rpx;
}
.box_text {
  margin-top: 20rpx;
}
.thank {
  width: 93rpx
}

.startBtn {
  width:195rpx;
  height:176rpx;
  background:url("https://mobiletest.derucci.net/web/musiMall/images/lottery/startbtn.png") no-repeat center;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 23rpx;
  box-sizing: border-box;
  text-align: center;
}
.start {
  width: 90rpx;
  height: 90rpx;
  margin: auto;
}
.start_text {
  color: #815F22;
  font-size: 17rpx;
}

.run {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 200rpx;
}

