.mask {
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  width: 100%;
  height: 100vh;
}




.container {
  margin: 0 auto;
  margin-top: 150rpx;
  width:620rpx;
  height:920rpx;
  background:#f5f5f5;
  box-shadow:0px 16rpx 24rpx 0px rgba(24,31,50,0.2);
  opacity:0.96;
  border-radius:48rpx;
  padding-top: 70rpx;
  box-sizing: border-box;
  position: relative;
}
.banner {
  width: 100%;
  text-align: center;
  font-weight: 500;
  font-size: 36rpx;
  color: #1c2236;
}
.gift {
  width: 100%;
  text-align: center;
  font-weight: 500;
  font-size: 48rpx;
  color: #1c2236;
  margin: 20rpx 0;
}
.remark {
  padding: 0 21rpx;
  color: #1C2236;
  font-size: 28rpx;
}




.award {
  position: absolute;
  left: 50%;
  top: 160rpx;
  margin-top: -110.5rpx;
  margin-left: -152rpx;
  width: 304rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
}
.award_ye {
  width: 300rpx;
  position: absolute;
  left: 0;
  top: -20rpx;
}
.award_img {
  width: 255rpx;
  margin-top: 40rpx
}

.btn {
  width: 620rpx;
  height: 90rpx;
  border-radius: 0  0 48rpx 48rpx ;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
}
.left_btn {
  width: 310rpx;
  line-height: 90rpx;
  color: #666;
  text-align: center;
  font-size: 34rpx;
  background: #fafafa;
}
.right_btn {
  width: 310rpx;
  line-height: 90rpx;
  background:linear-gradient(270deg,rgba(238,196,104,1),rgba(232,138,75,1));
  color: #fff;
  font-size: 34rpx;
  text-align: center;

}