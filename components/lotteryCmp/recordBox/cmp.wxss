/* components/lotteryCmp/recordBox/cmp.wxss */
.mask {
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
}
.border {
  position: absolute;
  top: 100rpx;
  left: 53rpx;
  /* z-index: 99; */
  width: 645rpx;
}
.container {
  width: 602rpx;
  height: 834rpx;
  background: #121321;
  margin: 0 auto;
  margin-top: 124rpx;
  position: relative;
  border-radius: 48rpx;
}
.wrapper {
  overflow: scroll;
  width: 100%;
  height: 714rpx;
}

.banner {
  background: #212e57;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  padding-top: 20rpx;
}
.record {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
  overflow: hidden;
  position: relative;
}

.left_img {
  width: 124rpx;
}

.main {
  font-size: 34rpx;
  color: #fff;
}
.detail {
  font-size: 26rpx;
  color: #a5a4a4;
  opacity: 0.7;
  line-height: 40rpx;
}
.right {
  color: #a5a4a4;
  font-size: 26rpx;
  line-height: 50rpx;
}

.time {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  color: #A5A4A4;
  font-size: 24rpx;
}

.content {
  width: 419rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.line {
  width: 100%;
  height: 10rpx;
  background: #1e294e;
}


.close {
  /* margin-top: 35rpx; */
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}
.close_img {
  width: 60rpx;
}