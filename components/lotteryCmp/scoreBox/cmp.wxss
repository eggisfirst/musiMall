}
.msg_image {
  width: 24rpx;
}
.btn {
  width: 129rpx;
  height: 60rpx;
  background: url("https://derucci-app.oss-cn-hangzhou.aliyuncs.com/musiMall/images/lottery/btn2.png") no-repeat center;
  background-size: 100% 100%;
  color: #261F2A;
  font-size: 26rpx;
  line-height: 60rpx;
