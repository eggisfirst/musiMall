.sec_text1 {
  color: #FEF1CC;
  font-size: 34rpx;
  width: 330rpx;
}
.sec_text2 {
  color: #FEF1CC;
  font-size: 26rpx;
  width: 232rpx;
}

.right {
  flex: 0.56;
}
.sec_text3 {
  color: #A6AAE3;
  font-size: 26rpx;
  line-height: 40rpx;
