<wxs module="filter">
  var filter = function(tel) {
    if(!tel) {
      return
    }
    tel = "" + tel;
    var ary = tel.split("");
    ary.splice(3,4,"****");
    return ary.join("");
  }
  module.exports = filter
</wxs>

  
