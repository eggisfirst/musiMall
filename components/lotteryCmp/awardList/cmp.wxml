<!--components/lotteryCmp/awardList/cmp.wxml-->
<view class="index">
  <view class="banner">
    <image class="ban_img" src="/images/lottery/gift.png" mode="widthFix" />
    <text class="title">中奖名单</text>
  </view>

  <swiper class="list" vertical="true" autoplay="true" circular="true" interval="2000" display-multiple-items='4'catchtouchmove='catchTouchMove' >
    <swiper-item catchtouchmove='catchTouchMove' wx:for='{{awardList}}'  wx:key="item.id">
      <view  class="listItem">
        <text class="phone">{{filter(item.mobile_number)}}</text>
        <text class="price">{{item.title}}</text>
      </view>
    </swiper-item>
</swiper>
