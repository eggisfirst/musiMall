  <swiper class="swiper"  current='{{tabVal}}' duration="200" bindchange="swiperChange">
    <swiper-item class='swiper-item'
      wx:for="{{list}}" 
      wx:key="{{item.tab}}" >
      <view 
        wx:for='{{item.productList}}' 
        wx:for-item="el"
        wx:key="{{name}}"
        wx:for-index='index'
        data-index='{{index}}'
        data-type="{{item.tab}}"
        data-producttype="{{item.productType}}"
        bindtap='toProductDetails'>
        <productLi productType="{{el}}"/>
      </view>
      <view class='noMore'>
        <text>没有更多了</text>
      </view>
    </swiper-item>
  </swiper>
 

