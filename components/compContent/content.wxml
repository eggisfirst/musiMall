  <swiper class="swiper" style="{{orderHeight}}" current='{{tabVal}}' duration="200" bindchange="swiperChange">
    <swiper-item class='swiper-item'
      wx:for="{{contentlist}}" 
      wx:key="{{tab}}" >
      <block  wx:if="{{item.productList}}">
        <!-- 活动首页 -->
        <view 
          wx:for='{{item.productList}}' 
          wx:for-item="el"
          wx:key="{{name}}"
          wx:for-index='myindex'
          data-index='{{myindex}}'
          data-type="{{item.tab}}"
          data-maxlength='{{el.maxlength}}'
          data-producttype="{{el.productType}}"
          bindtap='toProductDetails'>
          <productLi productType="{{el}}"/>
        </view>
        <view class='noMore'>
          <text>没有更多了</text>
        </view>
      </block> 
      <!-- 订单页面 -->
      <block wx:else>
        <view class='orderList'  
          wx:for="{{item.orderList}}"
          wx:key="{{tab}}"
          bindtap='toOrderStatus'
          data-no="{{item.no}}"
          data-status='{{item.status}}'>
          <orderLi status="{{item.status}}"/>
        </view>
        <view class='noOrder'  wx:if="{{item.orderList.length == 0}}" >
          <image src='/images/index/noorder.png' class='image'/>
          <text class='order-text'>暂无相关订单</text>
        </view>
      </block>
    </swiper-item>
  </swiper>
 

