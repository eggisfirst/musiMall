<view class='activity-container'>
  <banner 
    class='banner'
    imgUrls="{{imgUrls}}" 
    swiperType="{{swiperType}}"/>
  <compTab 
    class='tab'
    bind:getCurrentTab="getCurrentTab"
    current="{{current}}" 
    list="{{list}}"/>
  <compContent 
    class='content'
    key="{{key}}"
    type="activity"
    current="{{current}}" 
    contenList="{{contenList}}"
    bind:setLoginTips='setLoginTips'/>
   <view class='tips' hidden="{{showTips}}">
    <tipsBox class='tipsBox' bind:closeTips="closeTips" tipsText="{{tipsText}}"/>
  </view>
</view>
