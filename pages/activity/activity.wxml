<view class='activity-container'>
  <banner imgUrls="{{imgUrls}}" swiperType="{{swiperType}}"/>
  <compTab bind:getCurrentTab="getCurrentTab" current="{{current}}" list="{{list}}"/>
  <compContent 
    type="activity"
    contenList="{{contenList}}"
    list="{{list}}"
    tabVal="{{tabVal}}" 
    bind:setCurrentTab="setCurrentTab" 
    loginTips="{{loginTips}}"
    bind:setLoginTips='setLoginTips'/>

   <view class='tips' hidden="{{showTips}}">
    <tipsBox class='tipsBox' bind:closeTips="closeTips" tipsText="{{tipsText}}"/>
  </view>
</view>
