/* pages/lottery/lottery.wxss */


.container {
  background: #050B23;
  width: 100%;
  
}
.banner {
  width: 750rpx;
  height: 415rpx;
  background: url("https://derucci-app.oss-cn-hangzhou.aliyuncs.com/musiMall/images/lottery/banner.png") no-repeat center;
  background-size: 100% 100%;
  position: relative;
}
.rule {
  width:133rpx;
  height:47rpx;
  background:rgba(37,49,97,1);
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  font-size: 23rpx;
  color: #cbd5ff;
  position: absolute;
  right: 0;
  top: 39rpx;
  line-height: 47rpx;
  text-align: center;
}

.lottery_box {
   width:671rpx;
  height:617rpx;
  margin: 0 auto;
  background:linear-gradient(0deg,rgba(19,29,75,0.62) 0%,rgba(59,74,139,0.62) 100%);
  border-radius:15rpx;
  padding: 18rpx;
  padding-bottom: 16rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.score_box {
  width:710rpx;
  height:1021rpx;
  background: -webkit-linear-gradient(-190deg,#CE4050,#374D99);
  border-radius:12rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 31rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}



.list {
  width:710rpx;
  height:420rpx;


  background: -webkit-linear-gradient(-190deg,#CE4050,#374D99);
  margin-top: 30rpx;
  margin-bottom: 31rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;

  border-radius:12rpx;
  margin: 0 auto; 


  margin-bottom: 50rpx;
}


.indexFixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}