<!--pages/lottery/lottery.wxml-->
  <view class="container {{fixed}}">
    <view class="banner">
      <view class="rule" catchtap="handleRuleBtn">活动规则</view>
    </view>
    <view class="lottery_box">
      <lotteryBox allScore="{{allScore}}" 
                  catch:sexFixStatus="sexFixStatus"
                  catch:startLottery="startLottery"/>
    </view>
    <view class="score_box">
      <scoreBox catch:sexFixStatus="sexFixStatus"
                allScore="{{allScore}}" 
                catch:setScore="setScore"
                hasSave="{{hasSave}}"
                posterBtn="{{posterBtn}}"
                catchsetPosterBtn="setPosterBtn"
                catch:setViaImage="setViaImage"
                catch:setPosterStatus="setPosterStatus"
                getScoreStatus="{{getScoreStatus}}"/>
    </view>
    <view class="list">
      <awardList getList="{{getList}}"/>
    </view>

    <activeRules wx:if="{{showRules}}" catch:setShowRules="setShowRules"/>

    <posterCmp  wx:if="{{posterStatus}}"
                imgUrl="{{imgUrl}}"
                catch:closePoster="closePoster"
                name="{{name}}"
                catch:savePoster='savePoster'
                />
    


  </view>
