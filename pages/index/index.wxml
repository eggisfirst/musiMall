<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <block wx:if="{{!hasUserInfo && canIUse}}">
      <view class='via-box' >
        <button 
          open-type='getUserInfo'
          catch:getuserinfo='getUserInfo'>微信头像</button>  
      </view>
      <view class='tips-text'>点击获取微信头像昵称</view>
    </block>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <image 
            src="{{userInfo.gender == 2? '/images/index/girl.png': '/images/index/boy.png'}}" class='gender'/>
    </block>
  </view>

  <view class='orderBanner'>
    <orderTab catch:setHasPhone='setHasPhone' 
              status="{{status}}" 
              hasPhoneStatus="{{hasPhoneStatus}}"/>
  </view>

  <view class="coupon_box">
    <view class="coupon" catchtap="toCoupon" wx:if="{{hasPhoneStatus}}">
      <image class="c_img" src="/images/index/coupon.png" mode="widthFix" />
      <view class="title">优惠券</view>
      <view class="right">
        <image class="r_img" src="/images/index/right-icon.png"  mode="widthFix"/>
      </view>
    </view>

    <button class="button"  wx:else
            open-type="getPhoneNumber"  
            bindgetphonenumber="getPhoneNumber">
      <image class="c_img" src="/images/index/coupon.png" mode="widthFix" />
      <view class="title">优惠券</view>
      <view class="right">
        <image class="r_img" src="/images/index/right-icon.png"  mode="widthFix"/>
      </view>
    </button>

     <view class="coupon"  catchtap="handleCall">
      <image class="c_img" src="/images/index/phone.png" mode="widthFix" />
      <view class="title">联系客服</view>
      <view class="right">
        <text class="phone_num">400-777-0077</text>
        <image class="r_img" src="/images/index/right-icon.png"  mode="widthFix"/>
      </view>
    </view>
  
  </view>

  <!-- <view class='tips' hidden="{{showTips}}">
    <tipsBox class='tipsBox' catch:closeTips="closeTips" tipsText="{{tipsText}}"/>
  </view> -->
  
</view>
