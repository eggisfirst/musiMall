/* pages/activityDetails/activityDetails.wxss */
.detail-container {
  width: 750rpx;
  background-color: #f1f1f1;
  overflow: scroll;
  height: 100vh;
  padding-bottom: 180rpx;
  box-sizing: border-box;
}

.price-box {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e1e1e1;
  padding: 10rpx 20rpx 0 32rpx;
  box-sizing: border-box;
  align-items: center;
}
.price {
  line-height: 100rpx;
  /* padding-top: 50rpx; */
}
.now-price {
  font-size: 36rpx;
  color: #e93d3d;
}
.real-price {
  font-size: 24rpx;
  color: #909090;
  text-decoration: line-through;
}

.activity-count {
  line-height: 30rpx;
  text-align: center;
}
.count-title {
  color: #909090;
  font-size: 24rpx;
}
.count {
  width:130rpx;
  height:40rpx;
  border:1px solid #ff2d55;
  border-radius:10rpx;
}
.count text {
  font-size: 24rpx;
  color: #ff0101;
}

.activity-progress {
  position: relative;
  background-color: #fff;
}
.progress-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  padding-top: 68rpx;
  box-sizing: border-box;
}
.progress {
  width: 620rpx;
}
.progress-box text {
  font-size:24rpx;
  color: #909090; 
}

.hasRobbed {
  position: absolute;
  top: 20rpx;
  /* left: 50%; */
  background: #ff3701;
  border-radius:7rpx;
  height: 40rpx;
  display: flex;
  align-items: center; 
}
.hasRobbed::after{
  position: absolute;
  left: 15rpx;
  bottom: -15rpx;
  content: "";
  display: block;
  border-top: 10rpx solid #ff3701;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
}
.hasRobbed text {
  color: #fff;
  font-size: 24rpx;
}

.product-name {
  background-color: #fff;
  font-size: 28rpx;
  color: #363636;
  padding: 0 20rpx 0 31rpx;
}

.product-descript {
  background-color: #fff;
  font-size: 24rpx;
  color: #909090;
  line-height:36rpx;
  padding: 33rpx 20rpx 37rpx 31rpx;
}

.content-box {
  background: #f1f1f1;
  padding: 16rpx 12rpx;
  border-radius: 5rpx;
  position: relative;
}
.content-box::after {
  position: absolute;
  left: 30rpx;
  top: -46rpx;
  content: "";
  display: block;
  border-top: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 28rpx solid #f1f1f1;
  border-left: 20rpx solid transparent;
}

.product-size {
  background-color: #fff;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #363636;
  width: 100%;
  line-height: 80rpx;
  padding-left:30rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.product-details {
  margin-top: 10rpx;
  background-color: #fff;
  padding-left:30rpx;
  padding-right: 20rpx;
  line-height: 80rpx;
}
.title {
  font-size: 32rpx;
  color: #363636;
  font-weight: 500;
}

.bottomTab {
  position: fixed;
  bottom: 0;
  left: 0;
}

.rule-box {
  width: 750rpx;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5)
}
.ruleTips {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -323rpx;
  margin-left: -280rpx;
}

.tips {
  width: 750rpx;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5)
}
.tipsBox {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -185rpx;
  margin-left: -280rpx;
}

.selectNum-box {
  width: 750rpx;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0
}
.selectNum {
  position: fixed;
  bottom: 0;
  left: 0
}